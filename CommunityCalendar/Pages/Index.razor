@using System.Collections.Generic;
@using CommunityCalendar.Data;

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<select name="Month" @bind="ChosenMonth">
    @foreach (DateTime month in GetMonthRange())
{
    <option value="month">@month.ToString("MMM")</option>
}
</select>

<div>
    @foreach (DateTime day in Calendar.Calculate(ChosenMonth))
    {
        <div>
            @day.Day.ToString()
        </div>
    }
</div>

